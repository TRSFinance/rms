<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="com.trs.rms.rulemgr.bean.CkmCategory" table="ckmcategory">
  <id name="id">
   <generator class="native"/>
  </id>
  <property generated="never" lazy="false" length="128" name="name"
   not-null="true" type="string"/>
  <many-to-one class="com.trs.rms.rulemgr.bean.CkmTemplate" column="templateId" cascade="save-update,persist"
   lazy="false" name="template" not-null="true"/>
  <many-to-one class="com.trs.rms.rulemgr.bean.CkmCategory" column="parentId" cascade="save-update,persist"
   name="parentCategory"/>
 </class>
</hibernate-mapping>
